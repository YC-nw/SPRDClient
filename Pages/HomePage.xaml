<Page
    x:Class="SPRDClient.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SPRDClient.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:utils="clr-namespace:SPRDClient.Utils"
    Title="HomePage"
    d:DataContext="{d:DesignInstance Type=utils:FlashModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Transparent"
    JournalEntry.KeepAlive="False"
    KeepAlive="False"
    Loaded="HomePage_Loaded"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">
    <Grid Margin="11,10,9,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ui:SnackbarPresenter
            x:Name="RootSnackbar"
            HorizontalAlignment="Right"
            Panel.ZIndex="99" />
        <StackPanel
            x:Name="LoadingPanel"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <ui:TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Text="正在获取分区列表..."
                Visibility="Visible" />
            <ui:TextBlock
                Margin="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="15"
                Text="{Binding GettingPartitionsLogText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Visibility="Visible" />
        </StackPanel>
        <ui:ListView
            x:Name="PartitionsListView"
            MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderThickness="0.15"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            Visibility="Hidden">
            <ui:ListView.View>

                <ui:GridView>
                    <ui:GridViewColumn Width="200" Header="分区名称">
                        <ui:GridViewColumn.DisplayMemberBinding>
                            <Binding Path="Name" />
                        </ui:GridViewColumn.DisplayMemberBinding>
                    </ui:GridViewColumn>

                    <ui:GridViewColumn Width="150" Header="分区大小">
                        <ui:GridViewColumn.DisplayMemberBinding>
                            <Binding Path="DisplaySize" />
                        </ui:GridViewColumn.DisplayMemberBinding>
                    </ui:GridViewColumn>

                    <ui:GridViewColumn Width="300" Header="操作">
                        <ui:GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <Grid>
                                        <ui:Button
                                            Margin="3"
                                            Background="Transparent"
                                            Click="ReadButton_Click"
                                            Content="读取"
                                            CornerRadius="15"
                                            Icon="{ui:SymbolIcon Symbol=ArrowDownload16}"
                                            Tag="{Binding}" />
                                    </Grid>
                                    <ui:Button
                                        Margin="3"
                                        Background="Transparent"
                                        Click="WriteButton_Click"
                                        Content="写入"
                                        CornerRadius="15"
                                        Icon="{ui:SymbolIcon Symbol=ArrowUpload16}"
                                        Tag="{Binding}" />
                                    <ui:Button
                                        Margin="3"
                                        Background="Transparent"
                                        Click="EraseButton_Click"
                                        Content="擦除"
                                        CornerRadius="15"
                                        Icon="{ui:SymbolIcon Symbol=Eraser20}"
                                        Tag="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </ui:GridViewColumn.CellTemplate>
                    </ui:GridViewColumn>
                </ui:GridView>
            </ui:ListView.View>
        </ui:ListView>
        <!--  进度条  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ProgressBar
                x:Name="OperationProgress"
                Height="20"
                Margin="0,10"
                Background="Transparent"
                Maximum="10000"
                Minimum="0"
                Visibility="Collapsed"
                Value="0">
                <ProgressBar.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Offset="0.5" Color="LightGreen" />
                        <GradientStop Offset="1" Color="LightGoldenrodYellow" />
                    </LinearGradientBrush>
                </ProgressBar.Foreground>
            </ProgressBar>
            <ui:TextBlock
                x:Name="ProgressText1"
                Margin="0,10"
                HorizontalAlignment="Center" />
            <ui:TextBlock Grid.Row="1" Text="{Binding StatusLogText}" />

        </Grid>
        <Border Grid.Row="2" CornerRadius="10">

            <WrapPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <ui:Button
                    Width="AUTO"
                    Margin="5"
                    Click="Button_Click"
                    Content="保存分区表"
                    Appearance="Transparent"
                    Icon="{ui:SymbolIcon Symbol=Save20}"
                    ToolTip="保存分区表">
                </ui:Button>

                
                <ui:Button
                    Width="Auto"
                    Margin="5"
                    Click="BackupButton_Click"
                    Content="备份全区"
                    Icon="{ui:SymbolIcon Symbol=Save20}"
                    ToolTip="备份所有分区数据"
                    Appearance="Transparent">
                </ui:Button>

                <ui:Button
                    Width="Auto"
                    Margin="5"
                    Click="RestoreButton_Click"
                    Content="恢复备份"
                    Icon="{ui:SymbolIcon Symbol=History20}"
                    ToolTip="从备份恢复分区数据"
                    Appearance="Transparent">
                </ui:Button>
                <ui:Button
                    Width="80"
                    Margin="5"
                    Click="PowerOnButton_Click"
                    Content="开机"
                    Icon="{ui:SymbolIcon Symbol=Power20}"
                    Background="LightGreen">
                </ui:Button>
                <ui:Button
                    Width="80"
                    Margin="5"
                    Click="PowerOffButton_Click"
                    Content="关机"
                    Icon="{ui:SymbolIcon Symbol=Power20}"
                    Background="PaleVioletRed">
                </ui:Button>
            </WrapPanel>
        </Border>
    </Grid>
</Page>