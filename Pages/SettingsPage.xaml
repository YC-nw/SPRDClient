<Page
    x:Class="SPRDClient.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SPRDClient.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    KeepAlive="False"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ui:SymbolIcon
                    Margin="5"
                    VerticalAlignment="Center"
                    Symbol="TopSpeed20" />
                <ui:TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Text="读取/写入块大小（Block Size） ">
                    <ui:FontIcon />
                </ui:TextBlock>
                <Slider
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Maximum="65510"
                    Minimum="128"
                    Value="{Binding BlockSize, UpdateSourceTrigger=PropertyChanged}" />
                <ui:TextBox
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    ClearButtonEnabled="False"
                    Text="{Binding BlockSize, Mode=TwoWay, UpdateSourceTrigger=Default}" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ui:SymbolIcon Margin="5" Symbol="Save16" />
                <ui:TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Text="读取分区镜像文件保存目录" />
                <ui:TextBox
                    Grid.Column="2"
                    Background="Transparent"
                    Text="{Binding SaveFileDirectory, UpdateSourceTrigger=LostFocus}" />
                <ui:Button
                    Grid.Column="3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    Click="Button_Click"
                    Content="..." />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ui:SymbolIcon Margin="5" Symbol="Timer16" />
                <ui:TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="15">
                    响应超时
                </ui:TextBlock>
                <ui:TextBox
                    Grid.Column="2"
                    Background="Transparent"
                    Text="{Binding Timeout, UpdateSourceTrigger=LostFocus}" />
            </Grid>
        </StackPanel>
        <WrapPanel Grid.Row="1" Orientation="Horizontal">
            <ui:ToggleSwitch Margin="5" IsChecked="{Binding Verbose, UpdateSourceTrigger=PropertyChanged}">
                <ui:TextBlock>高级日志</ui:TextBlock>
            </ui:ToggleSwitch>
            <ui:ToggleSwitch Margin="5" IsChecked="{Binding UseAsyncSpeedUp, UpdateSourceTrigger=PropertyChanged}">
                <ui:TextBlock>使用多线程加速（显著提高cpu和内存占用，但效果明显）</ui:TextBlock>
            </ui:ToggleSwitch>
            <ui:ToggleSwitch Margin="5" IsEnabled="{Binding IsUsingNewFdl2}" IsChecked="{Binding SkipSignVerify, UpdateSourceTrigger=PropertyChanged}">
                <ui:TextBlock >写入分区无视签名校验（仅在新fdl上支持）</ui:TextBlock>
            </ui:ToggleSwitch>
        </WrapPanel>
    </Grid>
</Page>
